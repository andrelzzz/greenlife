<%= form_for(@event) do |f| %>
  <div class="form-group">
    <%= f.label :Nome %>
    <%= f.text_field :name, autofocus: true, placeholder: 'Nome do Evento', class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :Quando? %>
    <%= f.text_field :event_datetime, placeholder: 'Data do Evento', class: 'form-control' %>
  </div>
  <div class="actions">
    <%= f.submit (@event.persisted? ? :update : :create), class: 'btn btn-success' %>
  </div>
<% end %>
